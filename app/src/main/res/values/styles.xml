<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">48dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <!-- Text Styles -->
    <style name="AppTextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Dialog Styles -->
    <style name="AppDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:padding">24dp</item>
    </style>
    
    <!-- Camera Control Panel -->
    <style name="CameraControlPanel">
        <item name="android:background">#333333</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>

